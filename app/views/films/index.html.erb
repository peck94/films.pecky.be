<p id="notice"><%= notice %></p>

<h1>Films</h1>

<table>
  <thead>
    <tr>
      <th>Titel</th>
      <th>Synopsis</th>
      <th>Gezien</th>
      <th>Rating</th>
      <th>Image</th>
      <th>Imdb</th>
      <th>Trailer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.titel %></td>
        <td><%= film.synopsis %></td>
        <td><%= film.gezien %></td>
        <td><%= film.rating %></td>
        <td><%= film.image %></td>
        <td><%= film.imdb %></td>
        <td><%= film.trailer %></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

