<p id="notice"><%= notice %></p>

<h1>Films</h1>

<table class="table">
  <thead>
    <tr>
      <th>Titel</th>
      <th>Gezien</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.titel %></td>
        <td><%= film.gezien ? '&2714;' : '&2716;' %></td>
        <td><%= '&2721;' * film.rating %></td>
        <td><%= link_to 'Details', film %></td>
        <td><%= link_to 'Bewerken', edit_film_path(film) %></td>
        <td><%= link_to 'Verwijderen', film, method: :delete, data: { confirm: 'Weet je het zeker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

